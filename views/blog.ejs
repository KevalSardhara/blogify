<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Page</title>
    <%- include('./partials/head.ejs') %>
</head>

<body>
    <%- include('./partials/nav.ejs') %>

        <div class="container mt-5">
            <h1>
                <%= locals.blog.title%>
            </h1>
            <img src='<%= locals.blog.coverImageURL.substring(1) %>' width="200px">
            <div class="container mt-5">
                <pre class="card-text"><%= locals.blog.body%></pre>
            </div>
        </div>

        <div class="container mt-5">
            <img src='<%= locals.blog.createdBy.profilePictureURL %>' width="50px">
            <%= locals.blog.createdBy.name%>
        </div>

        <div class="container mt-3">
            <h1>Comment (<%= locals.comment.length %>)</h1>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= locals.blog._id %>" method="post"
                    enctype="application/x-www-form-urlencoded">
                    <div class="mb-3">
                        <input type="text" name="comment" class="form-control" id="exampleInputEmail1"
                            aria-describedby="emailHelp">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                <% } %>

                    <% locals.comment.forEach(element=> { %>
                        <div class="mt-3">
                            <img src="<%= element.createdBy.profilePictureURL %>" alt="" srcset="" width="40px">
                            <h4>
                                <%= element.createdBy.name%>
                            </h4>
                            <pre><b>Comment : </b><%= element.comment %></pre>
                        </div>
                        <% }) %>
        </div>

        <%- include('./partials/script.ejs') %>
</body>

</html>